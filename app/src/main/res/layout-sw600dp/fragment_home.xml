<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingBottom="32dp">

            <!-- Welcome Card with Gradient -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/primary"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="40dp"
                    android:background="@drawable/gradient_primary">

                    <TextView
                        android:id="@+id/tv_welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back!"
                        android:textColor="@color/white"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        android:letterSpacing="-0.02" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/white"
                        android:alpha="0.95"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        tools:text="Monday, January 1, 2024" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Weekly Overview Card (Full Width) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_stats"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/week_overview"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_headline_large"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_large" />

                    <!-- Stats Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Total Habits -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="24dp">

                            <TextView
                                android:id="@+id/tv_total_habits"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/primary"
                                android:textSize="48sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_habits"
                                android:textColor="@color/text_secondary"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                        <!-- Mood Entries -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="24dp">

                            <TextView
                                android:id="@+id/tv_total_moods"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/secondary"
                                android:textSize="48sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mood_entries"
                                android:textColor="@color/text_secondary"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                        <!-- Streak Days -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="24dp">

                            <TextView
                                android:id="@+id/tv_streak_days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/accent_green"
                                android:textSize="48sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/day_streak"
                                android:textColor="@color/text_secondary"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Two Column Grid for Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="24dp">

                <!-- Left Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <!-- Today's Habits Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_habits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/card_habit"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="28dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/today_habits"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_headline_medium"
                                    android:textStyle="bold" />

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    app:cardCornerRadius="14dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="@color/primary">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_habits"
                                        android:contentDescription="@string/nav_habits"
                                        app:tint="@color/white" />

                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_habits_summary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_headline_small"
                                tools:text="3 of 5 habits completed" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Today's Hydration Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_hydration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/card_hydration"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="28dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/today_hydration"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_headline_medium"
                                    android:textStyle="bold" />

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    app:cardCornerRadius="14dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="@color/accent_blue">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_hydration"
                                        android:contentDescription="@string/nav_hydration"
                                        app:tint="@color/white" />

                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_hydration_summary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_headline_small"
                                tools:text="1500ml of 2000ml" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Right Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <!-- Today's Mood Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_mood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/card_mood"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="28dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/today_mood"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_headline_medium"
                                    android:textStyle="bold" />

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    app:cardCornerRadius="14dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="@color/secondary">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_mood"
                                        android:contentDescription="@string/nav_mood"
                                        app:tint="@color/white" />

                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_mood_summary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_headline_small"
                                tools:text="Feeling Happy ðŸ˜Š" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Quick Tips Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/primary_green_light"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="28dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="@dimen/spacing_medium">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ’¡ "
                                    android:textSize="28sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/daily_tip"
                                    android:textColor="@color/primary_green"
                                    android:textSize="@dimen/text_size_headline_small"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_daily_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tip_consistency"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_body_large"
                                android:lineSpacingExtra="6dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
