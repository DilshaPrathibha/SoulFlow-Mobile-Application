<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- User Profile Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_habit"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="32dp"
                    android:gravity="center_vertical">

                    <!-- Profile Icon -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/primary">

                        <TextView
                            android:id="@+id/tv_user_initial"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="U"
                            android:textColor="@color/white"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            tools:text="J" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- User Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="24dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Name"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_headline_medium"
                            android:textStyle="bold"
                            tools:text="John Doe" />

                        <TextView
                            android:id="@+id/tv_user_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="user@email.com"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_body_large"
                            tools:text="john.doe@email.com" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Two Column Layout for Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <!-- Left Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="14dp">

                    <!-- Section Header: Preferences -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Preferences"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_headline_small"
                        android:textStyle="bold" />

                    <!-- Preferences Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="28dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/card_habit"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="28dp">

                            <!-- Dark Theme Toggle -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_dark_mode"
                                    app:tint="@color/primary" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Dark Theme"
                                        android:textColor="@color/text_primary"
                                        android:textSize="@dimen/text_size_body_large"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:text="Switch to dark mode"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="@dimen/text_size_body_medium" />

                                </LinearLayout>

                                <com.google.android.material.switchmaterial.SwitchMaterial
                                    android:id="@+id/switch_dark_theme"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    app:thumbTint="@color/switch_thumb_color"
                                    app:trackTint="@color/switch_track_color" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Section Header: Notifications -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Notifications"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_headline_small"
                        android:textStyle="bold" />

                    <!-- Notifications Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/card_habit"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="28dp">

                            <!-- Hydration Reminders -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_notifications"
                                    app:tint="@color/primary" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/hydration_reminders"
                                        android:textColor="@color/text_primary"
                                        android:textSize="@dimen/text_size_body_large"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:text="Get reminded to drink water"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="@dimen/text_size_body_medium" />

                                </LinearLayout>

                                <com.google.android.material.switchmaterial.SwitchMaterial
                                    android:id="@+id/switch_notifications"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    app:thumbTint="@color/switch_thumb_color"
                                    app:trackTint="@color/switch_track_color" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Right Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp">

                    <!-- Section Header: App Settings -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="App Settings"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_headline_small"
                        android:textStyle="bold" />

                    <!-- App Settings Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="28dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/card_habit"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:divider="@drawable/divider"
                            android:showDividers="middle">

                            <!-- Hydration Settings -->
                            <LinearLayout
                                android:id="@+id/card_hydration_settings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="28dp"
                                android:gravity="center_vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?attr/selectableItemBackground">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_hydration"
                                    app:tint="@color/primary" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Hydration Settings"
                                        android:textColor="@color/text_primary"
                                        android:textSize="@dimen/text_size_body_large"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:text="Configure daily goals and reminders"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="@dimen/text_size_body_medium" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_arrow_forward"
                                    app:tint="@color/text_hint" />

                            </LinearLayout>

                            <!-- App Information -->
                            <LinearLayout
                                android:id="@+id/card_app_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="28dp"
                                android:gravity="center_vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?attr/selectableItemBackground">
                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_info"
                                    app:tint="@color/primary" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/app_info"
                                        android:textColor="@color/text_primary"
                                        android:textSize="@dimen/text_size_body_large"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_app_version"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="6dp"
                                        android:text="@string/version_info"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="@dimen/text_size_body_medium" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_arrow_forward"
                                    app:tint="@color/text_hint" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Section Header: Account -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Account"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_headline_small"
                        android:textStyle="bold" />

                    <!-- Logout Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/card_habit"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="28dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_logout"
                                app:tint="@color/error" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Logout"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_body_large"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="Sign out of your account"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_size_body_medium" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/text_hint" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
