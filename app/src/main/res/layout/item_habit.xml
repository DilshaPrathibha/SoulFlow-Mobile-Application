<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_large"
    android:layout_marginVertical="@dimen/spacing_small"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/card_background"
    app:strokeWidth="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Left Side: Circular Progress Indicator -->
        <FrameLayout
            android:id="@+id/frame_circular_progress"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progress_bar_habit"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:progress="67"
                app:indicatorSize="80dp"
                app:trackThickness="8dp"
                app:indicatorColor="@color/accent_purple"
                app:trackColor="@color/progress_incomplete"
                app:trackCornerRadius="4dp" />

            <TextView
                android:id="@+id/tv_progress_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="67%" />

        </FrameLayout>

        <!-- Right Side: Habit Info -->
        <LinearLayout
            android:id="@+id/layout_habit_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/frame_circular_progress"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <!-- Habit Name with Action Buttons -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_habit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/btn_share"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Exercise" />

                <ImageButton
                    android:id="@+id/btn_share"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_toStartOf="@+id/btn_delete"
                    android:layout_marginEnd="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Share habit"
                    android:src="@drawable/ic_share"
                    android:padding="6dp"
                    app:tint="@color/text_secondary" />

                <ImageButton
                    android:id="@+id/btn_delete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Delete habit"
                    android:src="@drawable/ic_delete"
                    android:padding="6dp"
                    app:tint="@color/error" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_habit_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"
                tools:text="Daily physical activity"
                tools:visibility="visible" />

            <!-- Progress Text and Target -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_progress_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="20/30 minutes" />

                <TextView
                    android:id="@+id/tv_habit_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_tertiary"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Target: 30" />

            </LinearLayout>

            <!-- Streak Badge -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/card_stats">

                <TextView
                    android:id="@+id/tv_streak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textColor="@color/accent_purple"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:drawablePadding="4dp"
                    tools:text="ðŸ”¥ 5 days streak" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Completion Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_toggle_completion"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="12dp"
                android:text="@string/mark_complete"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/primary"
                app:cornerRadius="12dp"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp"
                tools:text="Mark Complete" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>